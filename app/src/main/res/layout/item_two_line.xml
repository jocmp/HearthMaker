<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:mode="twoLine"
    android:paddingLeft="?attr/listPreferredItemPaddingLeft"
    android:paddingRight="?attr/listPreferredItemPaddingRight">

    <TextView android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="you are here"
        android:textColor="?android:attr/textColorPrimary"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/item_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        tools:text="you are here"
        android:textColor="?android:attr/textColorSecondary"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:ellipsize="end"
        android:layout_below="@+id/item_title"
        android:layout_alignParentStart="true" />

    <GridLayout android:id="@+id/icon_grid"
        android:layout_alignParentRight="true"
        android:rowCount="2"
        android:columnCount="2"
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_title"
        android:layout_alignBottom="@+id/item_subtitle" >

        <!--HOW DO WE MAKE THE HEIGHT/WIDTH DYNAMIC?-->
        <TextView android:id="@+id/mana_cost"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:gravity="center"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:background="@drawable/mana_crystal"/>
        <TextView android:id="@+id/rarity"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_height="20dp"
            android:layout_width="15dp" />
        <TextView android:id="@+id/attack"
            android:text="4"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:gravity="center"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_height="20dp"
            android:layout_width="20dp" />
        <TextView android:id="@+id/health"
            android:text="4"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:gravity="center"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_height="20dp"
            android:layout_width="15dp" />
    </GridLayout>

</RelativeLayout>

